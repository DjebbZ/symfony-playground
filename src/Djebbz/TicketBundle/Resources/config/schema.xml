<?xml version="1.0" encoding="UTF-8"?>
<database name="symfony_playground" namespace="Djebbz\TicketBundle\Model" defaultIdMethod="native">
    <table name="ticket">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
        <column name="title" type="varchar" primaryString="true" size="100" />
        <column name="description" type="longvarchar" />
        <column name="user_id" type="integer" />
        <foreign-key foreignTable="user" phpName="Creator">
          <reference local="user_id" foreign="id" />
        </foreign-key>
        <column name="created_at" type="timestamp" />
    </table>

    <table name="user">
      <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
      <column name="name" type="varchar" size="30" />
      <column name="created_at" type="timestamp" />
    </table>
</database>